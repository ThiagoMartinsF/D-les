<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CadastroController</servlet-name>
        <servlet-class>controller.CadastroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriasController</servlet-name>
        <servlet-class>controller.CategoriasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoController</servlet-name>
        <servlet-class>controller.ProdutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EntradaController</servlet-name>
        <servlet-class>controller.EntradaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SobremesaController</servlet-name>
        <servlet-class>controller.SobremesaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BebidaController</servlet-name>
        <servlet-class>controller.BebidaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroProduto</servlet-name>
        <servlet-class>controller.CadastroProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroUsuarioController</servlet-name>
        <servlet-class>controller.CadastroUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Carrinho2Controller</servlet-name>
        <servlet-class>controller.Carrinho2Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdutoController</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/Cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/senha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriasController</servlet-name>
        <url-pattern>/Categorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoController</servlet-name>
        <url-pattern>/Produto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EntradaController</servlet-name>
        <url-pattern>/Entrada</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SobremesaController</servlet-name>
        <url-pattern>/Sobremesa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BebidaController</servlet-name>
        <url-pattern>/Bebida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroProduto</servlet-name>
        <url-pattern>/CadProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroUsuarioController</servlet-name>
        <url-pattern>/CadastroU</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Carrinho2Controller</servlet-name>
        <url-pattern>/Carrinho2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
